generator client {
  provider   = "prisma-client-js"
  output     = "../generated/prisma"
  engineType      = "wasm"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Message {
  id        String   @id @default(uuid())
  roomId    String
  text      String
  createdAt DateTime @default(now())

  senderId   String
  senderName String
  senderAvatar String?

  replyToId String?
  replyTo   Message? @relation("Reply", fields: [replyToId], references: [id])
  replies   Message[] @relation("Reply")

  reactions Reaction[]
  pinned    Boolean @default(false)
}

model Reaction {
  id        String   @id @default(uuid())
  messageId String
  userId    String
  emoji     String

  message   Message @relation(fields: [messageId], references: [id])

  @@unique([messageId, userId])
}


model Room {
  id          String            @id @default(uuid())
  createdAt   DateTime          @default(now())
  creatorId   String            // Clerk User ID
  participants RoomParticipant[]
}

model RoomParticipant {
  id                 String   @id @default(uuid())
  roomId             String
  userId             String   // Clerk User ID
  name               String
  imageUrl           String?
  role               String   @default("PARTICIPANT") // "HOST" or "PARTICIPANT" or "COHOST"
  isAudioMuted       Boolean  @default(false)
  isVideoPaused      Boolean  @default(false)
  audioLocked        Boolean  @default(false)        // Cannot unmute when true
  screenShareLocked  Boolean  @default(false)        // Cannot screen share when true

  room               Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@unique([roomId, userId])
}

model MpesaTransaction {
  id                  String   @id @default(uuid())
  userId              String   // Clerk User ID
  userName            String?  // User name from Clerk or M-Pesa
  phoneNumber         String
  amount              Decimal  @db.Decimal(10, 2)
  accountReference    String   // Selected account/purpose
  merchantRequestId   String?  @unique
  checkoutRequestId   String?  @unique
  mpesaReceiptNumber  String?
  transactionDate     DateTime?
  resultCode          Int?
  resultDesc          String?
  status              String   @default("PENDING") // PENDING, SUCCESS, FAILED, CANCELLED
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([userId])
  @@index([phoneNumber])
  @@index([status])
}