generator client {
  provider   = "prisma-client-js"
  output     = "../generated/prisma"
  engineType      = "wasm"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Message {
  id        String   @id @default(uuid())
  roomId    String
  text      String
  createdAt DateTime @default(now())

  senderId   String
  senderName String
  senderAvatar String?

  replyToId String?
  replyTo   Message? @relation("Reply", fields: [replyToId], references: [id])
  replies   Message[] @relation("Reply")

  reactions Reaction[]
  pinned    Boolean @default(false)
}

model Reaction {
  id        String   @id @default(uuid())
  messageId String
  userId    String
  emoji     String

  message   Message @relation(fields: [messageId], references: [id])

  @@unique([messageId, userId])
}


model Room {
  id          String            @id @default(uuid())
  createdAt   DateTime          @default(now())
  creatorId   String            // Clerk User ID
  participants RoomParticipant[]
}

model RoomParticipant {
  id             String   @id @default(uuid())
  roomId         String
  userId         String   // Clerk User ID
  name           String
  imageUrl       String?
  role           String   @default("PARTICIPANT") // "HOST" or "PARTICIPANT"
  isAudioMuted   Boolean  @default(false)
  isVideoPaused  Boolean  @default(false)
  
  room           Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@unique([roomId, userId])
}